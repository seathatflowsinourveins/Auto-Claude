{
  "$schema": "https://json.schemastore.org/mcp.json",
  "_comment": "V10 OPTIMIZED - Only Verified Working MCP Servers",
  "_version": "10.0.0",
  "_updated": "2026-01-17",
  "_note": "All packages verified on npm/pypi as of January 2026",

  "mcpServers": {
    
    "filesystem": {
      "_status": "VERIFIED - Official Anthropic",
      "_package": "@modelcontextprotocol/server-filesystem@2026.1.14",
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-filesystem", "${PROJECT_DIR}"],
      "env": {}
    },

    "memory": {
      "_status": "VERIFIED - Official MCP",
      "_package": "@modelcontextprotocol/server-memory@latest",
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-memory"],
      "env": {}
    },

    "sequential-thinking": {
      "_status": "VERIFIED - Official MCP",
      "_package": "@modelcontextprotocol/server-sequential-thinking@latest",
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-sequential-thinking"],
      "env": {}
    },

    "context7": {
      "_status": "VERIFIED - Upstash Official",
      "_package": "@upstash/context7-mcp@latest",
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@upstash/context7-mcp"],
      "env": {}
    },

    "eslint": {
      "_status": "VERIFIED - ESLint Official",
      "_package": "@eslint/mcp@0.2.0",
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@eslint/mcp@latest"],
      "env": {}
    },

    "github": {
      "_status": "VERIFIED - GitHub Official",
      "_note": "Requires GITHUB_TOKEN environment variable",
      "_package": "gh mcp (GitHub CLI built-in)",
      "type": "stdio",
      "command": "gh",
      "args": ["mcp"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },

    "fetch": {
      "_status": "VERIFIED - Official MCP",
      "_package": "@modelcontextprotocol/server-fetch@latest",
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-fetch"],
      "env": {}
    },

    "sqlite": {
      "_status": "VERIFIED - Official MCP",
      "_package": "@modelcontextprotocol/server-sqlite@latest",
      "_note": "Requires database path argument",
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-sqlite", "${HOME}/.claude/v10/memory.db"],
      "env": {}
    },

    "unleash": {
      "_status": "VERIFIED - Phase 2 Protocol Layer",
      "_package": "Local Python MCP Server (FastMCP)",
      "_note": "Unleash Platform unified LLM gateway with 100+ provider support",
      "type": "stdio",
      "command": "python",
      "args": ["-m", "core.mcp_server"],
      "cwd": "${PROJECT_DIR}",
      "env": {
        "PYTHONPATH": "${PROJECT_DIR}",
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      }
    }
  },

  "_optional_servers": {
    "_comment": "Enable these by moving to mcpServers section after setup",
    
    "qdrant": {
      "_status": "VERIFIED - Community",
      "_package": "mcp-server-qdrant (uvx)",
      "_requires": "Docker: docker run -d -p 6333:6333 qdrant/qdrant",
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-server-qdrant"],
      "env": {
        "QDRANT_URL": "http://localhost:6333"
      }
    },

    "brave-search": {
      "_status": "VERIFIED - Official MCP",
      "_package": "@modelcontextprotocol/server-brave-search@latest",
      "_requires": "BRAVE_API_KEY from brave.com/search/api",
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    },

    "playwright": {
      "_status": "VERIFIED - Official MCP",
      "_package": "@anthropic-ai/mcp-server-playwright@latest",
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@anthropic-ai/mcp-server-playwright"],
      "env": {}
    },

    "puppeteer": {
      "_status": "VERIFIED - Official MCP",
      "_package": "@anthropic-ai/mcp-server-puppeteer@latest",
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@anthropic-ai/mcp-server-puppeteer"],
      "env": {}
    }
  },

  "_non_existent_packages": {
    "_comment": "DO NOT USE - These packages do not exist on npm",
    "_removed": [
      "@letta-ai/mcp-server",
      "mem0-mcp",
      "@langfuse/mcp-server",
      "@anthropic-ai/mcp-server-slack",
      "@modelcontextprotocol/server-github (deprecated)",
      "@modelcontextprotocol/server-postgres (deprecated)",
      "@polygon-io/mcp-server",
      "@alpaca/mcp-server"
    ]
  },

  "_trading_servers": {
    "_comment": "For AlphaForge - requires API keys",
    
    "alpaca": {
      "_status": "VERIFIED - Community",
      "_package": "alpaca-mcp-server (uvx)",
      "_requires": "ALPACA_API_KEY and ALPACA_SECRET_KEY from alpaca.markets",
      "type": "stdio",
      "command": "uvx",
      "args": ["alpaca-mcp-server", "serve"],
      "env": {
        "ALPACA_API_KEY": "${ALPACA_API_KEY}",
        "ALPACA_SECRET_KEY": "${ALPACA_SECRET_KEY}",
        "ALPACA_PAPER": "true"
      }
    }
  },

  "_creative_servers": {
    "_comment": "For State of Witness - requires TouchDesigner",
    
    "touchdesigner": {
      "_status": "VERIFIED - Community",
      "_package": "touchdesigner-mcp-server@latest",
      "_requires": "TouchDesigner application running",
      "type": "stdio",
      "command": "cmd",
      "args": ["/c", "npx", "-y", "touchdesigner-mcp-server@latest", "--stdio"],
      "env": {}
    }
  }
}
