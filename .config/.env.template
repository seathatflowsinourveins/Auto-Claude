# =============================================================================
# UNLEASH PLATFORM - MASTER ENVIRONMENT TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your API keys
# Location: Z:/insider/AUTO CLAUDE/unleash/.config/.env
# =============================================================================

# -----------------------------------------------------------------------------
# ANTHROPIC (Claude API)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_API_KEY=${ANTHROPIC_API_KEY}

# -----------------------------------------------------------------------------
# RESEARCH & SEARCH
# -----------------------------------------------------------------------------
# Firecrawl - Web scraping/crawling (https://firecrawl.dev)
FIRECRAWL_API_KEY=fc-...
FIRECRAWL_RETRY_MAX_ATTEMPTS=5

# Exa - AI-powered search (https://exa.ai)
EXA_API_KEY=...

# Tavily - Research API
TAVILY_API_KEY=tvly-...

# Brave Search
BRAVE_API_KEY=...

# Perplexity
PERPLEXITY_API_KEY=pplx-...

# -----------------------------------------------------------------------------
# MEMORY & PERSISTENCE
# -----------------------------------------------------------------------------
# Letta - Long-term memory server
LETTA_URL=http://localhost:8500
LETTA_API_KEY=...

# Graphiti - Temporal knowledge graphs (uses Neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=...
GRAPHITI_LOG_LEVEL=INFO

# Qdrant - Vector database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=...

# Redis
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# OBSERVABILITY & TRACING
# -----------------------------------------------------------------------------
# Opik - AI observability platform (https://www.comet.com/opik)
# Get API key from: https://www.comet.com/opik or self-host with ./opik.sh
OPIK_API_KEY=...
OPIK_WORKSPACE=unleash
OPIK_PROJECT_NAME=voyage-embeddings
OPIK_TRACING_ENABLED=true

# -----------------------------------------------------------------------------
# EMBEDDING PROVIDERS
# -----------------------------------------------------------------------------
# Voyage AI (embeddings for State of Witness, semantic search)
VOYAGE_API_KEY=pa-...

# -----------------------------------------------------------------------------
# AI PROVIDERS
# -----------------------------------------------------------------------------
# OpenAI (for embeddings, alternate models)
OPENAI_API_KEY=sk-...

# Groq (fast inference)
GROQ_API_KEY=gsk_...

# Together AI
TOGETHER_API_KEY=...

# Ollama (local models)
OLLAMA_HOST=http://localhost:11434

# -----------------------------------------------------------------------------
# CLOUD PROVIDERS
# -----------------------------------------------------------------------------
# AWS
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Azure
AZURE_OPENAI_API_KEY=...
AZURE_OPENAI_ENDPOINT=...

# -----------------------------------------------------------------------------
# DEVELOPER TOOLS
# -----------------------------------------------------------------------------
# GitHub
GITHUB_TOKEN=ghp_...
GITHUB_PERSONAL_ACCESS_TOKEN=${GITHUB_TOKEN}

# Linear
LINEAR_API_KEY=lin_api_...

# Sentry
SENTRY_DSN=...

# Slack (notifications)
SLACK_BOT_TOKEN=xoxb-...
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Discord (notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# -----------------------------------------------------------------------------
# CREATIVE / MEDIA
# -----------------------------------------------------------------------------
# ElevenLabs (voice)
ELEVENLABS_API_KEY=...

# Replicate
REPLICATE_API_TOKEN=r8_...

# Runway
RUNWAY_API_KEY=...

# Everart
EVERART_API_KEY=...

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/unleash
POSTGRES_URL=${DATABASE_URL}

# QuestDB (time-series)
QUESTDB_URL=http://localhost:9000

# -----------------------------------------------------------------------------
# FINANCIAL (AlphaForge)
# -----------------------------------------------------------------------------
ALPACA_API_KEY=...
ALPACA_SECRET_KEY=...
ALPACA_BASE_URL=https://paper-api.alpaca.markets

TWELVE_DATA_API_KEY=...
ALPHA_VANTAGE_API_KEY=...
COINGECKO_API_KEY=...

# -----------------------------------------------------------------------------
# TOUCHDESIGNER / CREATIVE
# -----------------------------------------------------------------------------
TD_OSC_HOST=127.0.0.1
TD_OSC_PORT=7000
TD_WEBSOCKET_URL=ws://127.0.0.1:8080/pose

# -----------------------------------------------------------------------------
# PLATFORM SETTINGS
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Environment: development, staging, production
ENVIRONMENT=development

# Enable extended thinking
ENABLE_ULTRATHINK=true
THINKING_BUDGET=128000

# Daily cost limit (USD)
DAILY_COST_LIMIT=50

# =============================================================================
# END OF TEMPLATE
