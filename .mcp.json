{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schemas/mcp-config.json",
  "_notice": "V36 Architecture - Extended MCP config with tiered servers",
  "_optimized": "2026-02-03 - All tiers activated, Windows best practices",
  "_reference": ".mcp.unleashed.json for optional servers (search, DB, integrations)",
  "mcpServers": {

    "__tier1": "=== TIER 1: ALWAYS-ON (Core orchestration) ===",

    "claude-flow": {
      "command": "npx.cmd",
      "args": ["-y", "@claude-flow/cli@latest", "mcp", "start", "-t", "stdio", "--quiet"],
      "env": {
        "CLAUDE_FLOW_MODE": "v3",
        "CLAUDE_FLOW_HOOKS_ENABLED": "true",
        "CLAUDE_FLOW_TOPOLOGY": "hierarchical-mesh",
        "CLAUDE_FLOW_MAX_AGENTS": "15",
        "CLAUDE_FLOW_MEMORY_BACKEND": "hybrid",
        "NODE_NO_WARNINGS": "1",
        "NODE_ENV": "production"
      },
      "timeout": 30000,
      "autoStart": true,
      "_note": "Using v3.0.0 stable - alpha has stdout pollution bug (see ruvnet/claude-flow#835)",
      "description": "V3 Swarm orchestration with 27 tools"
    },

    "github": {
      "command": "npx.cmd",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "timeout": 15000,
      "description": "GitHub API operations (repos, PRs, issues, actions)"
    },

    "filesystem": {
      "command": "npx.cmd",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "Z:/insider/AUTO CLAUDE/unleash"],
      "timeout": 10000,
      "description": "File operations within project scope"
    },

    "memory": {
      "command": "npx.cmd",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "timeout": 10000,
      "description": "Knowledge graph memory with entity/relation persistence"
    },

    "sequential-thinking": {
      "command": "npx.cmd",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "timeout": 15000,
      "description": "Extended multi-step reasoning chains"
    },

    "__tier2": "=== TIER 2: KNOWLEDGE & DOCS (No API keys needed) ===",

    "context7": {
      "command": "npx.cmd",
      "args": ["-y", "@upstash/context7-mcp"],
      "timeout": 15000,
      "description": "Real-time library documentation lookup (battle-tested)"
    },

    "fetch": {
      "command": "npx.cmd",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "timeout": 30000,
      "description": "HTTP fetch for web content retrieval"
    },

    "__tier3": "=== TIER 3: RESEARCH (Requires API keys) ===",

    "exa": {
      "command": "npx.cmd",
      "args": ["-y", "exa-mcp-server"],
      "env": {
        "EXA_API_KEY": "${EXA_API_KEY}"
      },
      "timeout": 30000,
      "description": "AI-powered web search with deep research mode"
    },

    "firecrawl": {
      "command": "npx.cmd",
      "args": ["-y", "firecrawl-mcp"],
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      },
      "timeout": 30000,
      "description": "AI web scraping: crawl, scrape, extract, map sites"
    }
  }
}
