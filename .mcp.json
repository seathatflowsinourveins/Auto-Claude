{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schemas/mcp-config.json",
  "_notice": "V36 Architecture: Primary MCP config is in platform/.mcp.json",
  "_canonical": "platform/.mcp.json",
  "_optimized": "2026-02-03 - Windows best practices, timeouts, production env",
  "mcpServers": {
    "claude-flow": {
      "command": "npx.cmd",
      "args": ["-y", "@claude-flow/cli@latest", "mcp", "start", "-t", "stdio", "--quiet"],
      "env": {
        "CLAUDE_FLOW_MODE": "v3",
        "CLAUDE_FLOW_HOOKS_ENABLED": "true",
        "CLAUDE_FLOW_TOPOLOGY": "hierarchical-mesh",
        "CLAUDE_FLOW_MAX_AGENTS": "15",
        "CLAUDE_FLOW_MEMORY_BACKEND": "hybrid",
        "NODE_NO_WARNINGS": "1",
        "NODE_ENV": "production"
      },
      "timeout": 30000,
      "autoStart": true,
      "_note": "Using v3.0.0 stable - alpha has stdout pollution bug (see ruvnet/claude-flow#835)",
      "description": "V3 Swarm orchestration with 27 tools"
    },

    "github": {
      "command": "npx.cmd",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "timeout": 15000,
      "description": "GitHub API operations"
    },

    "filesystem": {
      "command": "npx.cmd",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "Z:/insider/AUTO CLAUDE/unleash"],
      "timeout": 10000,
      "description": "File operations"
    },

    "memory": {
      "command": "npx.cmd",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "timeout": 10000,
      "description": "Knowledge graph memory with entity/relation persistence"
    },

    "sequential-thinking": {
      "command": "npx.cmd",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "timeout": 15000,
      "description": "Extended multi-step reasoning chains"
    }
  }
}
