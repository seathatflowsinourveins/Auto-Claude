{
  "mcpServers": {
    "claude-flow": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@anthropic-ai/claude-flow@latest", "mcp"],
      "env": {
        "CLAUDE_FLOW_MODE": "v3",
        "CLAUDE_FLOW_HOOKS_ENABLED": "true",
        "CLAUDE_FLOW_TOPOLOGY": "hierarchical-mesh",
        "CLAUDE_FLOW_MAX_AGENTS": "15",
        "CLAUDE_FLOW_MEMORY_BACKEND": "hybrid",
        "MCP_TIMEOUT": "30000",
        "MCP_TOOL_TIMEOUT": "90000"
      },
      "autoStart": false,
      "description": "Claude-Flow V3 multi-agent orchestration"
    },
    "letta": {
      "command": "cmd",
      "args": ["/c", "letta", "server", "--port", "8283"],
      "env": {
        "LETTA_BASE_URL": "http://localhost:8283",
        "MCP_TIMEOUT": "30000",
        "MCP_TOOL_TIMEOUT": "90000"
      },
      "autoStart": false,
      "description": "Letta stateful agent memory server (run separately: letta server)"
    },
    "memory": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-memory"],
      "env": {
        "MCP_TIMEOUT": "30000",
        "MCP_TOOL_TIMEOUT": "60000"
      },
      "autoStart": false,
      "description": "Knowledge graph memory (official MCP)"
    },
    "filesystem": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-filesystem", "Z:/insider/AUTO CLAUDE/unleash"],
      "env": {
        "MCP_TIMEOUT": "30000",
        "MCP_TOOL_TIMEOUT": "60000"
      },
      "autoStart": false,
      "description": "Filesystem operations (official MCP)"
    },
    "sqlite": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-sqlite", "--db-path", "Z:/insider/AUTO CLAUDE/unleash/.claude/data/unleash.db"],
      "env": {
        "MCP_TIMEOUT": "30000",
        "MCP_TOOL_TIMEOUT": "90000"
      },
      "autoStart": false,
      "description": "SQLite database operations (official MCP)"
    },
    "fetch": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-fetch"],
      "env": {
        "MCP_TIMEOUT": "30000",
        "MCP_TOOL_TIMEOUT": "120000"
      },
      "autoStart": false,
      "description": "HTTP fetch operations (official MCP)"
    },
    "brave-search": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}",
        "MCP_TIMEOUT": "30000",
        "MCP_TOOL_TIMEOUT": "90000"
      },
      "autoStart": false,
      "description": "Brave web search (official MCP)"
    },
    "sequential-thinking": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@modelcontextprotocol/server-sequential-thinking"],
      "env": {
        "MCP_TIMEOUT": "30000",
        "MCP_TOOL_TIMEOUT": "120000"
      },
      "autoStart": false,
      "description": "Step-by-step reasoning (official MCP)"
    },
    "time": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@anthropic-ai/mcp-server-time"],
      "env": {
        "MCP_TIMEOUT": "30000",
        "MCP_TOOL_TIMEOUT": "30000"
      },
      "autoStart": false,
      "description": "Time and timezone operations"
    },
    "opik": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "opik-mcp"],
      "env": {
        "OPIK_API_KEY": "${OPIK_API_KEY}",
        "MCP_TIMEOUT": "30000",
        "MCP_TOOL_TIMEOUT": "90000"
      },
      "autoStart": false,
      "description": "Opik observability (V40 - 37+ metrics, track_anthropic(), drift detection)"
    }
  },
  "defaultServers": ["memory", "filesystem"],
  "serverGroups": {
    "development": ["memory", "filesystem", "sqlite", "fetch"],
    "research": ["brave-search", "fetch", "memory"],
    "orchestration": ["claude-flow", "letta", "memory", "opik"],
    "reasoning": ["sequential-thinking", "memory"],
    "observability": ["opik", "memory"]
  },
  "_comments": {
    "letta": "Start Letta server separately: cd sdks/letta/letta && letta server --port 8283",
    "claude-flow": "Uses claude-flow V3 for multi-agent orchestration",
    "removed": "Removed non-existent: @anthropic/mcp-*, serena, graphrag, firecrawl, code-index (need compilation)",
    "timeouts": "V33: MCP_TIMEOUT=30s init, MCP_TOOL_TIMEOUT varies by complexity (30-120s)"
  }
}
